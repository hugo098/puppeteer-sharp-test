@model puppeter_sharp_api.Models.MockModel

<!DOCTYPE html>
<html>
<head>
    <title>Report</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #2c3e50;
            text-align: center;
        }

        p {
            font-size: 14px;
            line-height: 1.6;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            text-align: center;
            font-size: 12px;
            color: #7f8c8d;
        }
    </style>
</head>
<body>
    <h1>@Model.Title</h1>
    <p>@Model.Content</p>
    <div class='footer'>Page <span class='pageNumber'></span> of <span class='totalPages'></span></div>
</body>
</html>
